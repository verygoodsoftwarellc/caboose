<style>
  .detail-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 24px;
  }

  .detail-header-left {
    flex: 1;
    min-width: 0;
  }

  .detail-title {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .detail-title h1 {
    font-size: 18px;
    font-weight: 600;
    word-break: break-all;
    color: var(--text-primary);
  }

  .detail-meta {
    display: flex;
    gap: 24px;
    margin-top: 12px;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .meta-label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }

  .meta-value {
    font-size: 14px;
    color: var(--text-primary);
    font-weight: 500;
  }

  .meta-value.mono {
    font-family: 'IBM Plex Mono', monospace;
  }

  .meta-value a {
    color: var(--accent);
    text-decoration: none;
  }

  .meta-value a:hover {
    text-decoration: underline;
  }

  /* Details - Refined Layout */
  .details-sections {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .details-section {
    padding: 20px 24px;
    border-bottom: 1px solid var(--border);
  }

  .details-section:last-child {
    border-bottom: none;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 16px;
  }

  .section-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .section-icon svg {
    width: 16px;
    height: 16px;
  }

  .section-icon.properties { background: #dbeafe; color: #2563eb; }
  .section-icon.statement { background: #fef3c7; color: #d97706; }
  .section-icon.trace { background: #f3e8ff; color: #9333ea; }
  .section-icon.events { background: #fee2e2; color: #dc2626; }

  .section-title {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
  }

  .section-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 16px 32px;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .detail-item.full-width {
    grid-column: 1 / -1;
  }

  .detail-label {
    font-size: 11px;
    font-weight: 500;
    color: var(--text-muted);
    letter-spacing: 0.02em;
  }

  .detail-value {
    font-size: 14px;
    color: var(--text-primary);
    word-break: break-word;
    line-height: 1.4;
  }

  .detail-value.mono {
    font-family: 'IBM Plex Mono', ui-monospace, monospace;
    font-size: 13px;
  }

  .detail-value.truncate {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* SQL/Statement display */
  .statement-block {
    background: #1e293b;
    border-radius: 8px;
    padding: 16px;
    overflow-x: auto;
  }

  .statement-block pre {
    margin: 0;
    white-space: pre-wrap;
    word-break: break-all;
    color: #e2e8f0;
    font-family: 'IBM Plex Mono', ui-monospace, monospace;
    font-size: 13px;
    line-height: 1.5;
  }

  /* Stacktrace section */
  .stacktrace-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-family: 'IBM Plex Mono', ui-monospace, monospace;
    font-size: 12px;
    background: var(--bg-body);
    border-radius: 8px;
    overflow: hidden;
  }

  .stacktrace-list li {
    padding: 8px 12px;
    border-bottom: 1px solid var(--border);
    color: var(--text-secondary);
  }

  .stacktrace-list li:last-child {
    border-bottom: none;
  }

  .stacktrace-list .file-path {
    color: var(--accent);
  }

  .stacktrace-list .line-number {
    color: var(--text-muted);
  }

  .stacktrace-list .method-name {
    color: var(--text-primary);
  }

  /* Events section */
  .events-section {
    border-top: 1px solid var(--border);
    padding: 20px;
  }

  .events-title {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--text-primary);
  }

  .event-item {
    padding: 12px;
    background: var(--bg-body);
    border-radius: 6px;
    margin-bottom: 8px;
  }

  .event-name {
    font-weight: 600;
    color: var(--error);
    margin-bottom: 8px;
  }

  .event-props {
    font-size: 13px;
    font-family: 'IBM Plex Mono', monospace;
  }
</style>

<%
  props = @span[:properties] || {}
  events = @span[:events] || []

  started_at = Time.at(@span[:start_timestamp] / 1_000_000_000.0) rescue nil

  # Determine badge class based on category
  badge_class = case @category
    when "queries" then "sql"
    when "cache" then "cache"
    when "views" then "view"
    when "http" then "http"
    when "mail" then "mail"
    when "exceptions" then "exception"
    else "other"
  end

  # Get display name
  display_name = @span[:name]

  # Get statement/content for code block
  statement = case @category
    when "queries"
      props["db.statement"]
    when "redis"
      props["db.statement"]
    when "http"
      nil # No statement block for HTTP
    else
      nil
  end

  # Root span link
  root_path = if @span[:root_trace_id]
    if @span[:root_kind] == "consumer"
      job_path(@span[:root_trace_id])
    else
      request_path(@span[:root_trace_id])
    end
  end

  root_label = if @span[:root_trace_id]
    if @span[:root_kind] == "consumer"
      # For jobs, code.namespace contains the job class name
      @span[:root_controller] || @span[:root_name].to_s.sub(/ (process|publish)$/, '')
    elsif @span[:root_controller] && @span[:root_action]
      # For requests, show controller#action
      "#{@span[:root_controller]}##{@span[:root_action]}"
    else
      @span[:root_name]
    end
  end
%>

<div class="page-header">
  <div class="detail-header">
    <div class="detail-header-left">
      <div class="detail-title">
        <span class="badge badge-<%= badge_class %>"><%= @category&.singularize&.titleize || "Span" %></span>
        <h1><%= display_name %></h1>
      </div>
      <div class="detail-meta">
        <div class="meta-item">
          <span class="meta-label">Duration</span>
          <span class="meta-value mono"><%= format_duration(@span[:duration_ms]) %></span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Time</span>
          <span class="meta-value"><%= started_at&.strftime("%b %d, %Y %H:%M:%S") %></span>
        </div>
        <% if root_path %>
          <div class="meta-item">
            <span class="meta-label">Parent</span>
            <span class="meta-value"><a href="<%= root_path %>"><%= root_label %></a></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="card">
    <%
      # Filter properties for display
      display_props = props.reject do |key, value|
        key == "db.statement" || key == "code.stacktrace" || value.is_a?(Hash) || value.is_a?(Array)
      end
    %>
    <div class="details-sections">
      <% if display_props.any? %>
        <!-- Properties Section -->
        <div class="details-section">
          <div class="section-header">
            <div class="section-icon properties">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
              </svg>
            </div>
            <span class="section-title">Properties</span>
          </div>
          <div class="section-grid">
            <% display_props.each do |key, value| %>
              <div class="detail-item">
                <span class="detail-label"><%= key.to_s.split(".").last.titleize %></span>
                <span class="detail-value <%= 'mono' if key.include?('.') %>" title="<%= value %>"><%= value %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if statement.present? %>
        <!-- Statement Section -->
        <div class="details-section">
          <div class="section-header">
            <div class="section-icon statement">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
            </div>
            <span class="section-title">Statement</span>
          </div>
          <div class="statement-block">
            <pre><code><%= statement %></code></pre>
          </div>
        </div>
      <% end %>

      <% if props["code.stacktrace"].present? %>
        <!-- Trace Section -->
        <div class="details-section">
          <div class="section-header">
            <div class="section-icon trace">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                <line x1="12" y1="22.08" x2="12" y2="12"></line>
              </svg>
            </div>
            <span class="section-title">Source Trace</span>
          </div>
          <ul class="stacktrace-list">
            <% props["code.stacktrace"].split("\n").each do |line| %>
              <li>
                <% if line =~ /\A(.+):(\d+) in `(.+)'\z/ %>
                  <span class="file-path"><%= $1 %></span><span class="line-number">:<%= $2 %></span> in <span class="method-name">`<%= $3 %>'</span>
                <% elsif line =~ /\A(.+):(\d+)\z/ %>
                  <span class="file-path"><%= $1 %></span><span class="line-number">:<%= $2 %></span>
                <% else %>
                  <%= line %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if events.any? %>
        <!-- Events Section -->
        <div class="details-section">
          <div class="section-header">
            <div class="section-icon events">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
            </div>
            <span class="section-title">Events (<%= events.size %>)</span>
          </div>
          <% events.each do |event| %>
            <div class="event-item">
              <div class="event-name"><%= event[:name] %></div>
              <% if event[:properties].present? %>
                <div class="event-props">
                  <% event[:properties].each do |key, value| %>
                    <div><strong><%= key %>:</strong> <%= value.to_s.truncate(500) %></div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if display_props.blank? && statement.blank? && props["code.stacktrace"].blank? && events.empty? %>
        <div class="details-section">
          <div style="padding: 20px; text-align: center; color: var(--text-muted);">
            No additional details available for this span.
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
