<style>
  .filters {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
  }

  .filter-select {
    padding: 6px 12px;
    border: 1px solid var(--border);
    border-radius: 6px;
    background: var(--bg-card);
    font-size: 13px;
    color: var(--text-primary);
    cursor: pointer;
    min-width: 100px;
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--accent);
  }

  .span-name {
    font-weight: 600;
    color: var(--text-primary);
  }

  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    border-top: 1px solid var(--border);
  }

  .pagination-link {
    padding: 8px 16px;
    border: 1px solid var(--border);
    border-radius: 6px;
    color: var(--text-primary);
    text-decoration: none;
    font-size: 13px;
  }

  .pagination-link:hover {
    background: var(--bg-body);
  }

  .pagination-info {
    font-size: 13px;
    color: var(--text-secondary);
  }

  .pagination-side {
    min-width: 100px;
  }
</style>

<%
  def span_display_info(span, category)
    props = span[:properties] || {}
    case category
    when "queries"
      stmt = props["db.statement"]&.to_s
      name = props["name"]&.to_s # e.g., "User Load"
      # Show SQL as primary, name as secondary. Fall back to name if no SQL.
      if stmt.present?
        { primary: stmt, secondary: name.presence }
      elsif name.present?
        { primary: name, secondary: nil }
      else
        { primary: span[:name], secondary: nil }
      end
    when "cache"
      key = props["key"]&.to_s
      op = span[:name].to_s.sub(".active_support", "").sub("cache_", "")
      store = props["store"]&.to_s&.sub(/^ActiveSupport::Cache::/, "")
      { primary: key ? "#{op}: #{key.truncate(80)}" : span[:name], secondary: store }
    when "views"
      identifier = props["identifier"] || props["code.filepath"]
      primary = identifier ? identifier.to_s.sub(/^.*\/app\/views\//, "") : span[:name]
      { primary: primary, secondary: nil }
    when "http"
      url = props["http.url"] || props["http.target"]
      method = props["http.method"]
      status = props["http.status_code"]
      primary = "#{method} #{url}".strip.truncate(100)
      { primary: primary, secondary: status ? "Status: #{status}" : nil }
    when "mail"
      mailer = props["mailer"]
      action = props["action"]
      subject = props["subject"]
      if mailer && action
        { primary: "#{mailer}##{action}", secondary: subject }
      else
        { primary: span[:name], secondary: nil }
      end
    when "redis"
      cmd = props["db.statement"]&.to_s&.truncate(100)
      { primary: cmd.presence || span[:name], secondary: nil }
    when "exceptions"
      { primary: span[:exception_name] || span[:name], secondary: nil }
    else
      { primary: span[:name], secondary: nil }
    end
  end

  current_path = send("#{@category}_spans_path")
%>

<div class="page-header">
  <h1 class="page-title"><%= page_title %></h1>
  <div class="filters">
    <%= form_tag(current_path, method: :get, id: "filter-form") do %>
      <%= text_field_tag :name, params[:name], placeholder: "Search...", class: "filter-select", style: "min-width: 200px;", onchange: "this.form.submit()" %>
    <% end %>
  </div>
</div>

<div class="page-body">
  <div class="card">
    <div class="card-body">
      <% if @spans.blank? %>
        <div class="empty-state">
          <svg class="empty-state-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <h3>No <%= page_title.downcase %> found</h3>
          <p>Data will appear here as your application processes requests.</p>
        </div>
      <% else %>
        <table class="data-table">
          <thead>
            <tr>
              <th><%= page_title.singularize %></th>
              <th style="width: 100px; text-align: right;">Duration</th>
              <th style="width: 120px; text-align: right;">Happened</th>
            </tr>
          </thead>
          <tbody>
            <% @spans.each do |span| %>
              <% started_at = Time.at(span[:start_timestamp] / 1_000_000_000.0) rescue nil %>
              <% display_info = span_display_info(span, @category) %>
              <tr onclick="window.location='<%= span_path(span[:id], category: @category) %>'" style="cursor: pointer;">
                <td class="path-cell">
                  <span class="span-name path-text" title="<%= display_info[:primary] %>"><%= display_info[:primary] %></span>
                  <% if display_info[:secondary].present? %>
                    <span class="path-subtext"><%= display_info[:secondary] %></span>
                  <% end %>
                </td>
                <td class="duration" style="text-align: right;"><%= format_duration(span[:duration_ms]) %></td>
                <td class="timestamp" style="text-align: right;"><%= started_at ? time_ago_in_words(started_at) : "-" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @total_count > 0 %>
          <div class="pagination">
            <div class="pagination-side">
              <% if @has_prev %>
                <%= link_to "Previous", send("#{@category}_spans_path", request.query_parameters.merge(offset: [@offset - 50, 0].max)), class: "pagination-link" %>
              <% end %>
            </div>
            <div class="pagination-info">
              <%= number_with_delimiter(@offset + 1) %> - <%= number_with_delimiter([@offset + @spans.size, @total_count].min) %> of <%= number_with_delimiter(@total_count) %>
            </div>
            <div class="pagination-side" style="text-align: right;">
              <% if @has_next %>
                <%= link_to "Next", send("#{@category}_spans_path", request.query_parameters.merge(offset: @offset + 50)), class: "pagination-link" %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
